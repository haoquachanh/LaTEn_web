# LaTEn Web Frontend Environment Variables
# Copy this file to .env.local and customize the values for your environment

# API Configuration
NEXT_PUBLIC_SERVER_URL=http://localhost:3001/api
NEXT_PUBLIC_API_TIMEOUT=30000

# App Environment
NEXT_PUBLIC_APP_ENV=development # development, staging, production
NEXT_PUBLIC_APP_VERSION=0.1.0

# Feature Flags
NEXT_PUBLIC_ENABLE_COMMENTS=true
NEXT_PUBLIC_ENABLE_EXAMS=true

# Analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ANALYTICS_ID=

# i18n Configuration
NEXT_PUBLIC_DEFAULT_LOCALE=en

# Deployment
NEXT_PUBLIC_BASE_PATH=
NEXT_PUBLIC_STATIC_DOMAIN=
